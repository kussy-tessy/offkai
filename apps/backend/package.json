{
	"name": "backend",
	"type": "module",
	"private": true,
	"scripts": {
		"predev": "prisma generate",
		"dev": "concurrently \"tsup src/index.ts --watch --format esm\" \"DOTENV_CONFIG_PATH=/workspace/.env node -r dotenv/config --watch dist/index.js\"",
		"build": "tsup src/index.ts --format esm",
		"start": "DOTENV_CONFIG_PATH=/workspace/.env NODE_ENV=production node -r dotenv/config dist/index.js",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"lint": "biome lint .",
		"format": "biome format . --write"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.1.0",
		"@fastify/jwt": "^10.0.0",
		"@fastify/static": "^8.0.0",
		"@offkai/core": "workspace:*",
		"@prisma/client": "^5.22.0",
		"bcryptjs": "^3.0.3",
		"discord.js": "^14.25.1",
		"dotenv": "^17.2.3",
		"fastify": "^5.0.0",
		"fastify-plugin": "^5.1.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bcryptjs": "^3.0.0",
		"concurrently": "^9.2.1",
		"prisma": "^5.22.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.4.0"
	}
}
