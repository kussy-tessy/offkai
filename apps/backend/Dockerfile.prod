# ===============================
# ğŸ—ï¸ Build Stage
# ===============================
FROM node:22 AS builder
WORKDIR /workspace

RUN corepack enable && corepack prepare pnpm@9.0.0 --activate

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.base.json ./
COPY apps/backend/package.json apps/backend/package.json
COPY apps/frontend/package.json apps/frontend/package.json
COPY packages/domain/package.json packages/domain/package.json

RUN pnpm install --frozen-lockfile --recursive

COPY . .

# Prisma Client ã®ç”Ÿæˆï¼ˆDBæ¥ç¶šä¸è¦ãªã®ã§ build æ™‚ã§OKï¼‰
RUN pnpm --filter backend prisma generate --schema apps/backend/prisma/schema.prisma

# ã‚¢ãƒ—ãƒªã®ãƒ“ãƒ«ãƒ‰
RUN pnpm --filter backend build
RUN pnpm --filter frontend build --mode prod


# ===============================
# ğŸš€ Run Stage
# ===============================
FROM node:22 AS runner
WORKDIR /app
ENV NODE_ENV=production

# â˜… runner ã§ã‚‚ pnpm ã‚’ä½¿ãˆã‚‹ã‚ˆã†ã«ã™ã‚‹
RUN corepack enable && corepack prepare pnpm@9.0.0 --activate

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.base.json ./
COPY apps/backend/package.json apps/backend/package.json
COPY apps/frontend/package.json apps/frontend/package.json
COPY packages/domain/package.json packages/domain/package.json

# node_modules ã¨æˆæœç‰©ã‚’ã‚³ãƒ”ãƒ¼
COPY --from=builder /workspace/node_modules ./node_modules
COPY --from=builder /workspace/apps/backend/node_modules ./apps/backend/node_modules
COPY --from=builder /workspace/apps/backend/dist ./apps/backend/dist
COPY --from=builder /workspace/apps/frontend/dist ./apps/frontend/dist
COPY --from=builder /workspace/apps/backend/prisma ./apps/backend/prisma
COPY --from=builder /workspace/packages ./packages

EXPOSE 3000

# â˜… èµ·å‹•æ™‚ã« migrate â†’ ãã®å¾Œã‚µãƒ¼ãƒèµ·å‹•
CMD sh -c "\
  cd /app/apps/backend && \
  pnpm exec prisma migrate deploy --schema prisma/schema.prisma && \
  node /app/apps/backend/dist/index.js \
"
